<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.poo.gestorbiblioteca.ui.controller.prestamos.PrestamosController">
    <children>
        <HBox alignment="CENTER_LEFT" spacing="10" style="-fx-padding: 5 10 5 10;">
         <ImageView fitHeight="25.0" fitWidth="25.0">
            <image>
               <Image url="@../images/search-icon.png" />
            </image>
         </ImageView>
            <TextField fx:id="campoBusquedaPrestamos" prefHeight="35.0" prefWidth="20.0" promptText="Buscar por DNI, Socio, Fecha o Estado..." HBox.hgrow="ALWAYS" />
            <Button fx:id="btnNuevoPrestamo" mnemonicParsing="false" onAction="#handleNuevoPrestamo" text="Nuevo Préstamo" />
        </HBox>
        <TableView fx:id="tablaPrestamos" VBox.vgrow="ALWAYS">
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
            <placeholder>
                <Label text="Sin resultados" />
            </placeholder>
            <columns>
                <TableColumn fx:id="colPrestamoLibro" prefWidth="281.0" text="Libro" />
                <TableColumn fx:id="colPrestamoSocio" prefWidth="201.0" text="Prestado a" />
                <TableColumn fx:id="colPrestamoDNI" prefWidth="102.0" styleClass="columna-centrada" text="DNI" />
                <TableColumn fx:id="colPrestamoFechaRetiro" prefWidth="123.0" styleClass="columna-centrada" text="Fecha de Retiro" />
                <TableColumn fx:id="colPrestamoFechaDev" prefWidth="163.0" styleClass="columna-centrada" text="Fecha de Devolución" />
                <TableColumn fx:id="colEstado" prefWidth="125.0" text="Estado" />
            </columns>
        </TableView>

        <ToolBar prefHeight="20.0">

        </ToolBar>
    </children>
</VBox>
