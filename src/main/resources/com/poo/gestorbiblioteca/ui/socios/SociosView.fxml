<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.poo.gestorbiblioteca.ui.controller.socios.SociosController">
    <children>
        <HBox alignment="CENTER_LEFT" spacing="10" style="-fx-padding: 5 10 5 10;">
            <children>
                <ImageView fitHeight="25.0" fitWidth="25.0">
                    <image>
                        <Image url="@../images/search-icon.png" />
                    </image>
                </ImageView>
                <TextField fx:id="campoBusquedaSocios" prefHeight="35.0" prefWidth="20.0" promptText="Buscar por Nombre, DNI, Carrera, Area o Tipo..." styleClass=".search-field" HBox.hgrow="ALWAYS" />
                <Button fx:id="btnNuevoSocio" mnemonicParsing="false" onAction="#handleNuevoSocio" text="Nuevo Socio" />
            </children>
        </HBox>
        <TableView fx:id="tablaSocios" VBox.vgrow="ALWAYS">
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
            <placeholder>
                <Label text="Sin resultados" />
            </placeholder>
            <columns>
                <TableColumn fx:id="colSocioDNI" prefWidth="70.0" styleClass="columna-centrada" text="DNI" />
                <TableColumn fx:id="colSocioNombre" prefWidth="300.0" text="Nombre" />
                <TableColumn fx:id="colSocioTipo" prefWidth="150.0" text="Tipo" />
                <TableColumn fx:id="colSocioAreaCarrera" prefWidth="200.0" text="Ãrea/Carrera" />
            </columns>
        </TableView>

        <ToolBar prefHeight="20.0">

        </ToolBar>
    </children>
</VBox>
