<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<VBox xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.poo.gestorbiblioteca.ui.controller.libros.LibrosController">
    <children>
        <HBox alignment="CENTER_LEFT" spacing="10" style="-fx-padding: 5 10 5 10;">
            <children>
                <ImageView fitHeight="25.0" fitWidth="25.0">
                    <image>
                        <Image url="@../images/search-icon.png" />
                    </image>
                </ImageView>
                <TextField fx:id="campoBusquedaLibros" promptText="Buscar por Título, Editorial, Año..." HBox.hgrow="ALWAYS"
                           prefHeight="35.0" prefWidth="20.0"/>
                <Button fx:id="btnNuevoLibro" mnemonicParsing="false" text="Nuevo Libro" onAction="#handleNuevoLibro"/>
            </children>
        </HBox>
        <TableView fx:id="tablaLibros" maxWidth="Infinity" VBox.vgrow="ALWAYS">
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
            <placeholder>
                <Label text="Sin resultados" />
            </placeholder>
            <columns>
                <TableColumn fx:id="colLibroTitulo" prefWidth="323.0" text="Título" />
                <TableColumn fx:id="colLibroEdicion" prefWidth="60.0" styleClass="columna-centrada" text="Edición" />
                <TableColumn fx:id="colLibroEditorial" prefWidth="98.0" text="Editorial" />
                <TableColumn fx:id="colLibroAnio" prefWidth="50.0" styleClass="columna-centrada" text="Año" />
                <TableColumn fx:id="colLibroPrestado" prefWidth="64.0" text="Prestado" />
                <TableColumn fx:id="colLibroPrestadoA" prefWidth="204.0" text="Prestado a" />
            </columns>
        </TableView>
        <ToolBar prefHeight="20.0">

        </ToolBar>
    </children>
</VBox>
